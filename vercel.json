{
    "version": 2,
    "buildCommand": "cd frontend && npm ci --production --no-optional && npm run build",
    "outputDirectory": "frontend/build",
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "https://b-league-api.onrender.com/api/$1"
        },
        {
            "src": "/socket.io/(.*)",
            "dest": "https://b-league-api.onrender.com/socket.io/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}
