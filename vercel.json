{
    "version": 2,
    "builds": [
        {
            "src": "frontend/*",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "frontend/build"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "https://b-league-api-production.up.railway.app/api/$1"
        },
        {
            "src": "/socket.io/(.*)",
            "dest": "https://b-league-api-production.up.railway.app/socket.io/$1"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/build/index.html"
        }
    ]
}
