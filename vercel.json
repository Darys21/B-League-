{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ],
    "routes": [
        {
            "src": "^/api/.*",
            "dest": "https://b-league-api-production.up.railway.app:8080/api/$1"
        },
        {
            "src": "^/socket.io/.*",
            "dest": "https://b-league-api-production.up.railway.app:8080/socket.io/$1"
        },
        {
            "src": "/static/(.*)",
            "dest": "/frontend/build/static/$1"
        },
        {
            "src": "/(.+\\.\\w+)$",
            "dest": "/frontend/build/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/build/index.html"
        }
    ]
}
